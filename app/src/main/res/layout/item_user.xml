<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/cv_elevation_large"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/padding_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="@dimen/img_size_Xsmall"
                android:layout_height="@dimen/img_size_Xsmall"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                app:tint="@color/colorPrimary"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_baseline_work_24" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="ألفرع الريسي"
                android:textColor="@color/text_color"
                android:textSize="@dimen/txt_subheading"
                android:layout_marginRight="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView8"
                app:layout_constraintRight_toLeftOf="@+id/imageView8"
                app:layout_constraintTop_toTopOf="@+id/imageView8" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="@dimen/img_size_Xsmall"
                android:layout_height="@dimen/img_size_Xsmall"
                android:layout_marginTop="16dp"
                app:tint="@color/colorPrimary"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name"
                android:src="@drawable/ic_email" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="{قخ تل السطلان"
                android:textSize="@dimen/txt_subheading"
                android:layout_marginRight="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView9"
                app:layout_constraintRight_toLeftOf="@+id/imageView9"
                app:layout_constraintTop_toTopOf="@+id/imageView9" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="@dimen/img_size_Xsmall"
                android:layout_height="@dimen/img_size_Xsmall"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email"
                android:src="@drawable/ic_baseline_monetization_on_24"
                app:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/account_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0592891871"
                android:textSize="@dimen/txt_subheading"
                android:layout_marginRight="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView10"
                app:layout_constraintRight_toLeftOf="@+id/imageView10"
                app:layout_constraintTop_toTopOf="@+id/imageView10" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="@dimen/img_size_Xsmall"
                android:layout_height="@dimen/img_size_Xsmall"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@+id/account_txt"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email"
               android:src="@drawable/point_icon"
                android:layout_marginRight="32dp"
                app:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/points_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:textSize="@dimen/txt_subheading"
                app:layout_constraintBottom_toBottomOf="@+id/imageView11"
                app:layout_constraintRight_toLeftOf="@+id/imageView11"
                app:layout_constraintTop_toTopOf="@+id/imageView11"
                tools:text="71" />
            <LinearLayout
                android:id="@+id/contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                app:layout_constraintRight_toRightOf="@+id/imageView10"
                app:layout_constraintTop_toBottomOf="@+id/account_txt">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:text="@string/contact"
                    android:textSize="@dimen/txt_title" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="@dimen/img_size_Xsmall"
                    android:layout_height="@dimen/img_size_Xsmall"

                    android:src="@drawable/icon_contact_us"
                    app:tint="@color/colorPrimary" />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>