<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/gray"
        android:textSize="8dp"
        app:layout_constraintRight_toRightOf="@+id/txt_msg"
        app:layout_constraintTop_toBottomOf="@+id/txt_msg"
        tools:text="5:50Am" />

    <TextView
        android:id="@+id/txt_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:background="@drawable/ic_round_login_button_with_gradient"
        android:gravity="right|center"
        android:textColor="@color/white"
        android:padding="6dp"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="aaaaaaa" />


    <TextView
        android:id="@+id/txt_time_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/txt_msg_admin"
        app:layout_constraintTop_toBottomOf="@+id/txt_msg_admin"
        tools:text="5:50Am" />

    <TextView
        android:id="@+id/txt_msg_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_rectangle_14"
        android:gravity="right|center"

        android:padding="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        tools:text="dsadasdasdaasdasdasdasdasdsad" />
</androidx.constraintlayout.widget.ConstraintLayout>